#!/bin/bash

# 进入 Shell 脚本所在目录
path=$(dirname $_)
cd $path

# 进入 React-Native 目录（工程根目录）
cd ../

# 移除占位符文件
sudo rm -rf resources/image/Placeholder
sudo rm -rf android/app/src/main/java/top/faylib/oro/model/Placeholder
sudo rm -rf android/app/src/main/res/mipmap-hdpi/Placeholder
sudo rm -rf android/app/src/main/res/mipmap-mdpi/Placeholder
sudo rm -rf android/app/src/main/res/mipmap-xhdpi/Placeholder
sudo rm -rf android/app/src/main/res/mipmap-xxhdpi/Placeholder
sudo rm -rf ios/OrO/Classes/Base/Placeholder
sudo rm -rf ios/OrO/Classes/Model/Placeholder

# 删除残留文件
sudo rm -rf android/.gradle/
sudo rm -rf android/.idea/
sudo rm -rf android/build/
sudo rm -rf android/app/app.iml
sudo rm -rf android/app/build/
sudo rm -rf android/local.properties

# 删除构建工具包，删除缓存
sudo yarn clean

# 退出脚本
exit 0
